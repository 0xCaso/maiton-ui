    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "frames.js": "^0.19.1",
    "react": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "twin.macro": "^3.4.1",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
